<Context>
    <Resource name="jdbc/MyDB"
              auth="Container"
              type="javax.sql.DataSource"
              maxActive="100"
              maxIdle="30"
              maxWait="10000"
              username="${env.DATABASE_USER}"       
              password="${env.DATABASE_PASSWORD}"   
              driverClassName="org.mariadb.jdbc.Driver"
              url="${env.DATABASE_URL}"/>             
</Context>
